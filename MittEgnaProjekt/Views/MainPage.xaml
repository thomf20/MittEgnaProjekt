<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MittEgnaProjekt.MainPage"
             Title="Startsida">

    <StackLayout Margin="20">

        <Label Text="Välkommen till båtbokningsappen!" FontSize="Large" HorizontalOptions="Center" Margin="0, 20, 0, 40"/>

        <Button Text="Boka båt" 
                Clicked="OnMakeBookingClicked" 
                Margin="0, 0, 0, 20"/>

        <Button Text="Se väder" 
                Clicked="OnCheckWeatherDataClicked" 
                Margin="0, 0, 0, 20"/>

        <Button Text="Logga in" 
                Clicked="OnLoginClicked" 
                Margin="0, 20, 0, 0"/>
    </StackLayout>

</ContentPage>
